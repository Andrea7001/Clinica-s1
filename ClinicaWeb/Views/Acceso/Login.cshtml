@model ClinicaWeb.Models.DTOs.VMUsuarioLogin;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Inicio de sesión para la clínica" />
    <meta name="author" content="ClinicaWeb" />
    <title>Login - Clínica</title>
   
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background: linear-gradient(135deg, #a0d7a7 0%, #ffffff 100%); 
            background-size: cover;
            background-position: center;
            height: 100vh;  
        }

        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background-color: #2ecc71; /* Verde suave, asociado con salud */
            color: white;
            text-align: center;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .btn-primary {
            background-color: #2ecc71; /* Verde suave */
            border-color: #2ecc71;
        }

            .btn-primary:hover {
                background-color: #27ae60; /* Verde oscuro */
                border-color: #27ae60;
            }

        .form-control:focus {
            border-color: #2ecc71;
            box-shadow: 0px 0px 8px rgba(46, 204, 113, 0.5);
        }

        .small a {
            color: #2ecc71; /* Verde */
            text-decoration: none;
        }

            .small a:hover {
                text-decoration: underline;
            }

        .alert-danger {
            background-color: #f8d7da; /* Rojo suave */
            color: #721c24;
        }
    </style>
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center align-items-center vh-100">
                        <div class="col-md-6 col-lg-5">
                            <div class="card shadow-lg">
                                <div class="card-header">
                                    <h3 class="font-weight-light">Bienvenido a la Clínica</h3>
                                    <p class="mb-0">Inicia sesión para acceder a tu cuenta</p>
                                </div>
                                <div class="card-body">
                                    <form asp-controller="Acceso" asp-action="Login" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" type="text" placeholder="Nro Documento" asp-for="DocumentoIdentidad" required />
                                            <label>Nro Documento</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" type="password" placeholder="Contraseña" asp-for="Clave" required />
                                            <label>Contraseña</label>
                                        </div>
                                        @if (ViewData["Mensaje"] != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @ViewData["Mensaje"]
                                            </div>
                                        }
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small">
                                        <a asp-controller="Acceso" asp-action="Registrarse">¿No tienes cuenta? ¡Regístrate aquí!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light">
                <div class="container-fluid px-4 text-center">
                    <small class="text-muted">© 2024 Clínica. Todos los derechos reservados.</small>
                </div>
            </footer>
        </div>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
  